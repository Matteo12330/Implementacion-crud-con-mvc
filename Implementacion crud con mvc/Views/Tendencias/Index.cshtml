@model IEnumerable<Implementacion_crud_con_mvc.Models.Tendencia>

@{
    ViewData["Title"] = "Lista de Tendencias";
}

<h2 class="mb-3">Lista de Tendencias</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar Nueva Tendencia</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.First().Descripcion)</th>
            <th>@Html.DisplayNameFor(model => model.First().FechaCreacion)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Descripcion</td>
                <td>@item.FechaCreacion.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

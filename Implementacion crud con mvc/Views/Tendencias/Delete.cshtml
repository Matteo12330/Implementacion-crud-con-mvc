@model Implementacion_crud_con_mvc.Models.Tendencia

@{
    ViewData["Title"] = "Eliminar Tendencia";
}

<h2 class="text-danger">¿Estás seguro de que deseas eliminar esta tendencia?</h2>

<div class="border p-3 mb-3">
    <p><strong>Nombre:</strong> @Model.Nombre</p>
    <p><strong>Descripción:</strong> @Model.Descripcion</p>
    <p><strong>Fecha de Creación:</strong> @Model.FechaCreacion.ToString("dd/MM/yyyy")</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

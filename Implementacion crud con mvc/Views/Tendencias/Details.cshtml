@model Implementacion_crud_con_mvc.Models.Tendencia

@{
    ViewData["Title"] = "Detalles de Tendencia";
}

<h2>Detalles de Tendencia</h2>

<div class="border p-3 mb-3">
    <p><strong>Nombre:</strong> @Model.Nombre</p>
    <p><strong>Descripción:</strong> @Model.Descripcion</p>
    <p><strong>Fecha de Creación:</strong> @Model.FechaCreacion.ToString("dd/MM/yyyy")</p>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</div>
